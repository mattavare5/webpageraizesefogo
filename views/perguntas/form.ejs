<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<section class="form-section">
  <h1><%= pergunta ? "Editar Pergunta" : "Nova Pergunta" %></h1>

  <form action="<%= pergunta ? ('/perguntas/editar/' + pergunta.id) : '/perguntas/nova' %>" method="POST" class="contact-form">
    <div class="form-group">
      <label for="titulo">Título</label>
      <input id="titulo" name="titulo" class="form-control" required value="<%= pergunta ? pergunta.titulo : '' %>">
    </div>

    <div class="form-group">
      <label for="descricao">Descrição</label>
      <textarea id="descricao" name="descricao" class="form-control" rows="6" required><%= pergunta ? pergunta.descricao : '' %></textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn">Salvar</button>
      <a href="/perguntas" class="btn alt">Cancelar</a>
    </div>
  </form>
</section>

<%- include("../partials/footer") %>
